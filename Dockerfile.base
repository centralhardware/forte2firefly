FROM eclipse-temurin:24-jre

# Install Tesseract and dependencies from standard repos (compatible with tess4j 5.12.0)
RUN apt-get update && \
    apt-get install -y \
        tesseract-ocr \
        tesseract-ocr-eng && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Verify installation
RUN tesseract --version

# Set Tesseract data directory
ENV TESSDATA_PREFIX=/usr/share/tesseract-ocr/5/tessdata/
